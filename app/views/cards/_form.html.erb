<%= form_with model: card do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_area :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <% positions = ['pitcher', 'catcher', 'first', 'second', 'third', 'short', 'left', 'center', 'right', 'dh'] %>
  <% positions.each do |position| %>
    <div>
      <%= f.label :"#{position}" %>
      <%= f.check_box :"#{position}" %>
    </div>
  <% end %>
  <% if logged_in? %>
    <%= f.submit '登録', class: 'btn btn-black btn-block' %>
  <% end %>
<% end %>
